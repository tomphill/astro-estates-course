---
import { replaceUrls } from "../utils/replaceUrls";
import { joinClasses } from "../utils/joinClasses";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faChevronDown } from "@fortawesome/free-solid-svg-icons";
type Props = {
  classes: string;
  styles: string;
  label: string;
  url: string;
};
const { classes, styles, label, url } = Astro.props;
const allClasses = joinClasses(classes, "group relative");
const href = replaceUrls(url, Astro.url.host);
---

<li class={allClasses} style={styles}>
  <a href={href} class="block px-6 sm:px-0 py-3 sm:py-0">
    {label}
    <FontAwesomeIcon className="text-xs pl-1" icon={faChevronDown} />
  </a>
  <ul
    class="pl-4 z-20 sm:hidden sm:group-hover:block sm:absolute sm:top-full sm:right-0 sm:text-right whitespace-nowrap bg-event-horizon py-2 [&_a]:px-4 [&_a]:py-2 [&_a]:block"
  >
    <slot />
  </ul>
</li>
